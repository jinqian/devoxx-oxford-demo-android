<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/about_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_app"
            android:textSize="@dimen/about_text_size"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/about_vertical_spacing"
                android:text="@string/collaboration"
                android:textSize="@dimen/about_text_size"/>

            <ImageView
                android:layout_width="@dimen/logo_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/about_vertical_spacing"
                android:src="@drawable/logo_xebia"/>

            <ImageView
                android:layout_width="@dimen/logo_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/about_vertical_spacing"
                android:src="@drawable/logo_cellenza"/>

            <ImageView
                android:layout_width="@dimen/logo_width"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_microsoft"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
